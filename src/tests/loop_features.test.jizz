// Test skibidi loop with complex condition
buss("\n--- Testing skibidi loop with complex condition ---");
let a = 1;
let b = 10;
skibidi (a < 5) {
    if (b > 5) {
        buss("a =", a, "b =", b);
        a = a + 1;
        b = b - 1;
    } else {
        // Exit the loop
        a = 100;
    }
}
buss("Final: a =", a, "b =", b); 